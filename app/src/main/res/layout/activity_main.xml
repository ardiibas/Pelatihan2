<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="id.gifood.pelatihan2.MainActivity">

    <Button
        android:drawableLeft="@drawable/ic_sms_black_24dp"
        android:id="@+id/btn_sms"
        android:text="SMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:drawableRight="@drawable/ic_call_black_24dp"
        android:id="@+id/btn_telp"
        android:text="Telp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_simple"
        android:text="Simple list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_custom"
        android:text="Custom list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
